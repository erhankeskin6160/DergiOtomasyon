@{
    var subscription = ViewBag.issubscription;
    bool automaticRenewal = subscription?.AutomaticRenewal ?? false;
}
<html>
    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>Kullanıcı Paneli</title>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
     
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
          rel="stylesheet">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/font-awesome.css" />

    <link rel="stylesheet" href="css/bootstrap.css" />

    <link rel="stylesheet" href="css/style.css">
    <style>
        body,
        html {
            height: 100%;
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            padding-top: 1rem;
        }

        .main-content {
            margin-left: 250px;
            /* Sidebar genişliği kadar */
        }
    </style>
    </head>
<body>
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse text-white vh-100 p-3">
        <h4 class="text-white mb-4">Kullanıcı Paneli</h4>
        <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link text-white" href="#profil">👤 Profil Bilgileri</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="#abonelik">📄 Abonelik</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="#favoriler">⭐ Favorilerim</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="#gecmis">📚 Okuma Geçmişi</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="#bildirimler">🔔 Bildirimler</a></li>
        </ul>
        @if (ViewBag.issubscription!=null)
        {
            <form asp-controller="UserSubscription" asp-action="UpdateAutoRenew" method="post" id="autoRenewForm">
                <input type="hidden" name="UserSubscriptionsId" value="@subscription.Id" />
                <input type="hidden" id="hiddenAutoRenew" name="autoRenew" value="@automaticRenewal.ToString().ToLower()" />


                <label for="autoRenewToggle">Otomatik Yenileme</label>
                <label class="switch">
                    <input type="checkbox" id="autoRenewToggle"
                    @(automaticRenewal ? "checked" : "")
                           onchange="toggleAutoRenew(this)" />
                    <span class="slider round"></span>
                </label>
            </form>

        }

        <style>
            .switch {
                position: relative;
                display: inline-block;
                width: 50px;
                height: 25px;
                margin-left: 10px;
            }

                .switch input {
                    opacity: 0;
                    width: 0;
                    height: 0;
                }

            .slider {
                position: absolute;
                cursor: pointer;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: #ccc;
                transition: 0.4s;
                border-radius: 25px;
            }

                .slider:before {
                    position: absolute;
                    content: "";
                    height: 18px;
                    width: 18px;
                    left: 4px;
                    bottom: 3.5px;
                    background-color: white;
                    transition: 0.4s;
                    border-radius: 50%;
                }

            input:checked + .slider {
                background-color: #4CAF50;
            }

                input:checked + .slider:before {
                    transform: translateX(24px);
                }
        </style>

         

        <a class="btn btn-primary btn-lg text-center justify-content-center mt-2 ms-5 fw-bolder" href="/Login/Logout">Çıkış</a>
    </nav>

    <!-- Main Content -->
    <div class="main-content p-4">
        @RenderBody()
    </div>
</body>
<script>
    function toggleAutoRenew(checkbox) {
        // Eğer tikliyse true, değilse false olarak gizli inputa yaz
        document.getElementById("hiddenAutoRenew").value = checkbox.checked;
        document.getElementById("autoRenewForm").submit();
    }
</script>

</html>

