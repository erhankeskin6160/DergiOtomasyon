<!DOCTYPE html>
<html lang="tr">
@{
    
    var  isloggin = Context.Session.GetInt32("UserId").HasValue;



}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dergi Otomasyon Sistemi</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/font-awesome.css" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/style.css" />
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4 py-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">Dergi Otomasyon</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-3">

                    <li class="nav-item">
                        <a class="nav-link text-secondary hover-blue" href="/Home">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary hover-blue" href="/Dergiler/Index">Dergiler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary hover-blue" href="#">Editör Paneli</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary hover-blue" href="/Home/About">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary hover-blue" href="/Home/Contact">İletişim</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center gap-3">
                    @if (!isloggin)
                    {
                        <a href="/Login/Index" class="btn btn-sm btn-primary">Giriş Yap</a>
                        <a href="/Register/Index" class="btn btn-sm btn-primary">Kayıt Ol</a>
                    }
                    else
                    {
                    <a href="/Profile/Index" class="btn btn-sm btn-primary">Profilim</a>
                        <a href="/Login/Logout" class="btn btn-sm btn-primary">Çıkış Yap</a>
                    }
                    <select class="form-select form-select-sm" aria-label="Dil seçimi">
                        <option value="tr">TR</option>
                        <option value="en">EN</option>
                    </select>
                </div>
            </div>
        </div>
    </nav>

    <!-- İçerik -->
    <div>@RenderBody()</div>

    <!-- Footer -->
    <footer class="footer mt-4 py-5" style="background-color:#fbf9f5;">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>Dergi Otomasyon Sistemi</h5>
                    <p>Bilişim Projesi Dergi Otomasyon sistemi yapılıyor. Güncellenme Tarihi 12.03.2025</p>
                </div>
                <div class="col-md-3">
                    <h6>Hızlı Bağlantılar</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Index">Ana Sayfa</a></li>
                        <li><a href="/Dergiler/Index">Dergiler</a></li>
                        <li><a href="#">SSS</a></li>
                        <li><a href="/Home/About">Hakkımızda</a></li>
                        <li><a href="/Home/Contact">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Üyelik</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Register/Index">Kayıt Ol</a></li>
                        <li><a href="/Login/Index">Giriş Yap</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Sosyal Medyalar</h5>
                    <div class="d-flex gap-3">
                        <a href="#"><i class="fab fa-facebook fa-2x text-primary"></i></a>
                        <a href="#"><i class="fab fa-x-twitter fa-2x text-primary"></i></a>
                        <a href="#"><i class="fab fa-linkedin fa-2x text-primary"></i></a>
                        <a href="#"><i class="fab fa-instagram fa-2x text-primary"></i></a>
                        <a href="#"><i class="fab fa-youtube fa-2x text-primary"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scriptler -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.9.6/lottie.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
