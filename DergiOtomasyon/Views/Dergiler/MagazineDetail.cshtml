@model MagazineInfo
@{
    Layout = null;
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
    rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/font-awesome.css" />

    <link rel="stylesheet" href="../css/bootstrap.css" />

    <link rel="stylesheet" href="../css/style.css">
    <title>Dergi Detay</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4 py-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">Dergi Otomasyon</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-3">
                    <li class="nav-item mb-1">
                        <a class="nav-link text-secondary hover-blue" href="#">Ana Sayfa</a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link text-secondary hover-blue" href="dergiler/dergiler.html">Dergiler</a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link text-secondary hover-blue" href="#">Editör Paneli</a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link text-secondary hover-blue" href="#">Hakkımızda</a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link text-secondary hover-blue" href="#">İletişim</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-sm btn-primary">Giriş Yap</button>
                    <button class="btn btn-sm btn-primary">Kayıt Ol</button>
                    <select class="form-select form-select-sm">
                        <option value="tr">TR</option>
                        <option value="en">EN</option>
                    </select>
                </div>
            </div>
        </div>
    </nav>

    <section>
        <div class="container">
            <div class="row">

                <div class="col-md-8">



                    <div class="card-img text-center">

                        <h2 class="mb-5 p-3 text-center text-bg-secondary w-50 justify-content-center ms-8 rounded-bottom-3">
                            @Model.Magazine.MagazineName
                        </h2>

                        <div class="list-detays d-inline-block text-center">

                            <ul class="list-unstyled">
                                <li class="list-inline-item detay-icon">
                                    <i class="fa-solid fa-bookmark fa-3x text-primary me-1 ms-n6  "></i>
                                </li>
                                <br>
                                <li class="list-inline-item mt-4 detay-icon">
                                    <i class="fa-solid fa-thumbs-up fa-3x text-primary me-1 ms-n6  "></i>
                                </li>
                                <br>
                                <li class="list-inline-item mt-4 detay-icon">
                                    <i class="fa-solid fa-copy fa-3x text-primary me-1 ms-n6 pb-2 "></i>
                                </li>
                                <br>
                                <li class="list-inline-item mt-4 me-2 detay-icon">
                                    <i class="fa-solid fa-print fa-3x text-primary me-1 ms-n6 "></i>
                                </li>

                            </ul>
                        </div>
                        <img src="../img/hamle.jpg" class="w-50 h-50 me-6 p-2 mb-5" alt="">
                        <p class="dergi-text">
                            @Model.MagazineDescrition?.Substring(1,100);
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="list mt-8">
                        <div class="card-list text-bg-primary p-3 rounded-2">
                            <p class="fw-bold">Yayın Tarihi: <span class="lead">@Model.PublicationDate.ToString("F",new System.Globalization.CultureInfo("tr-Tr"))</span></p>
                            <p class="fw-bold">Yayınlayan Kurum: <span class="lead">Tıpkı Basım</span></p>
                            <p class="fw-bold">Kaçıncı Sayı: <span class="lead">9</span></p>
                            <p class="fw-bold">Dergi Editor: <span class="lead">@Model.Magazine.Editor</span></p>
                        </div>
                    </div>

                    <div class="">
                        <a href="#" class="btn btn-primary icerik-onizle  p-2 mt-5 w-100 fw-bold">
                            <i>
                                <i class="fa-solid fa-file-pdf"></i>
                            </i>
                            İçerik
                            Önizle
                        </a>
                    </div>
                </div>
                 
            </div>
        </div>
    </section>

    <!-- Dergi Listele-->

    <section>
        <!-- Kitap Kartları -->
        <div class="container">
            <div class="mt-5">
                <h3 class="mb-3">Derginin Sayıları</h3>
                <div class="row">
                    @foreach (var magazine in (List<MagazineInfo>)TempData["magazine"])
                    {
                        <div class="me-4 mb-2 col-xl-2 col-lg-4 col-md-6 col-sm-6" id="books-card">
                            <div class="book-card">
                                <img class="book-img" src="~/img/yansımadergisi.jpg" alt="Kitap Kapağı">
                                <div class="book-card-body">
                                    <h5 class="book-title text-center mt-2">@magazine.Magazine.MagazineName @magazine.IssueNumber</h5>
                                    <p class="text-muted fs-6 text-center">Yayın Tarihi: Ekim 2024</p>
                                    <p class="text-break fw-medium ps-1 mt-2">
                                        @magazine.MagazineDescrition?.Substring(0,60)...
                                    </p>
                                    <a href="#" class="btn btn-primary btn-sm index-detay-btn ms-3 mt-2 me-5">
                                        Detayları
                                        Gör
                                    </a>

                                    <!-- <a href="#" class="btn btn-primary btn-sm ms-2 me-5">Detayları Gör</a> -->


                                    <div class=" d-inline justify-content-end gap-2">
                                        <a href="" style="color: #333;">
                                            <svg xmlns="http://www.w3.org/2000/svg"
                                            viewBox="-2 -2 24 24" width="20" fill="currentColor">
                                                <path d="M1 0h6a1 1 0 1 1 0 2H3.414L18 16.586V13a1 1 0 0 1 2 0v6a1 1 0 0 1-1 1h-6a1 1 0 0 1 0-2h3.586L2 3.414V7a1 1 0 1 1-2 0V1a1 1 0 0 1 1-1z">
                                                </path>
                                            </svg>
                                        </a>
                                        <a href="" style="color: #333;">
                                            <svg xmlns="http://www.w3.org/2000/svg"
                                            viewBox="-2 -2.5 24 24" width="28" fill="currentColor">
                                                <path class=""
                                                d="M10 13.554l3.517 1.85-.672-3.917 2.846-2.774-3.932-.571L10 4.579 8.241 8.142l-3.932.571 2.846 2.774-.672 3.916L10 13.554zm0 2.26L3.827 19.06l1.179-6.875L.01 7.317l6.902-1.003L10 .06l3.087 6.254 6.902 1.003-4.995 4.868 1.18 6.875L10 15.814z">
                                                </path>
                                            </svg>
                                        </a>

                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                  


                </div>
            </div>
    </section>

    <footer class="footer mt-4  py-5" style="background-color:#fbf9f5;">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>Dergi Otomasyon Sistemi</h5>
                    <p>Bilişim Projesi Dergi Otomasyon sistemi yapılıyor. Güncellenme Tarihi 12.03.2025</p>
                </div>
                <div class="col-md-3">
                    <h6>
                        Hızlı Bağlantılar
                    </h6>
                    <ul class="list-unstyled">
                        <li><a href="#home">Ana Sayfa</a></li>
                        <li><a href="#discover">Dergiler</a></li>
                        <li><a href="#summary">SSS </a></li>
                        <li><a href="#takeaways">Hakkımızda</a></li>
                        <li><a href="#subscribe">İletişim</a></li>


                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>
                        Üyelik
                    </h6>
                    <ul class="list-unstyled">
                        <li><a href="#home">Kayıt Ol</a></li>
                        <li><a href="#discover">Giriş Yap</a></li>



                    </ul>
                </div>

                <div class="col-md-3">
                    <h5>Sosyal Medyalar</h5>
                    <div class="d-flex gap-3">
                        <a href="#"><i class="fab fa-facebook fa-3x text-primary text-center"></i></a>
                        <a href="#"><i class="fab fa-x fa-3x text-primary"></i></a>
                        <a href="#"> <i class="fab fa-linkedin fa-3x text-primary"></i></a>
                        <a href="#"><i class="fab fa-instagram fa-3x text-primary"></i></a>
                        <a href=""><i class="fab fa-youtube fa-3x text-primary"></i></a>
                    </div>
                </div>
            </div>
        </div>

    </footer>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.9.6/lottie.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>