@model MagazineInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style.css" />
 

 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.9.6/lottie.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
 

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card-img text-center">
                <h2 class="mb-5 p-3 text-center text-bg-secondary w-50 mx-auto rounded-bottom-3 " id="dergiIsmi">
                    @Model.Magazine.MagazineName
                </h2>

                <div class="list-detays d-inline-block text-center">
                    <ul class="list-unstyled">
                        <li class="list-inline-item detay-icon">
                            <a href="@Url.Action("FavoriteMagazine", "Dergiler", new { MagazineInfoId = Model.Id })" title="Favorilere Ekle">
                                <i class="fa-solid fa-bookmark fa-3x text-primary me-1"></i>
                            </a>

                            
                        </li>
                        <br />
                        <li class="list-inline-item mt-4 detay-icon">
                            <a href="@Url.Action("LikeMagazine", "Dergiler", new { MagazineInfoId = Model.Id })" title="Beğenilen Listeye  Ekle">
                            <i class="fa-solid fa-thumbs-up fa-3x text-primary me-1">
                               
                               
                            </i>
                            </a>
                        </li>
                        <br />
                        <li class="list-inline-item mt-4 detay-icon" onclick="KopyalaIsim()">
                            
                            <i class="fa-solid fa-copy fa-3x text-primary me-1 pb-2"></i>
                        </li>
                        <br />
                        <li class="list-inline-item mt-4 me-2 detay-icon" onclick="Yazdir()">
                            <i class="fa-solid fa-print fa-3x text-primary me-1 "></i>
                        </li>
                    </ul>
                </div>

                <img src="~/img/hamle.jpg" class="w-50 h-50 p-2 mb-5" alt="Dergi Kapak">
                <p class="dergi-text">
                    @* @Model.MagazineDescrition?.Substring(1, 100) *@
                </p>

                <form method="post" asp-action="Rate" class="rating-form">
                     <input type="hidden" asp-for="MagazineId"   />
                   <div class="star-rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <button type="submit" name="point" value="@i" class="star-button" title="@i Yıldız">
                                <i class="fa fa-star"></i>
                            </button>
                        }
                    </div>
                </form>

                <p>Ortalama Puan: @Model.AverageRating.ToString("0.0")</p>

            </div>
        </div>

        <div class="col-md-4">
            <div class="list mt-4">
                <div class="card-list text-bg-primary p-3 rounded-2">
                    <p class="fw-bold">Yayın Tarihi: <span class="lead">@Model.PublicationDate.ToString("F", new System.Globalization.CultureInfo("tr-TR"))</span></p>
                    <p class="fw-bold">Yayınlayan Kurum: <span class="lead">Tıpkı Basım</span></p>
                    <p class="fw-bold">Kaçıncı Sayı: <span class="lead">@Model.IssueNumber</span></p>
                    <p class="fw-bold">Dergi Editör: <span class="lead">@Model.Magazine.Editor</span></p>
                </div>
            </div>
 

            <a class="btn btn-primary p-2 mt-5 w-100 fw-bold" href=" @Url.Action("Borrow", "Dergiler")/@Model.Id">
                Ödünç Al
            </a>
        </div>
    </div>

    <div class="mt-5">
        <h3 class="mb-3">Derginin Sayıları</h3>
        <div class="row">
            @foreach (var magazine in (List<MagazineInfo>)ViewBag.MagazineList)
            {
                <div class="col-xl-2 col-lg-4 col-md-6 col-sm-6 mb-4">
                    <div class="book-card">
                        <img class="book-img w-100" src="~/img/yansımadergisi.jpg" alt="Kitap Kapağı">
                        <div class="book-card-body text-center">
                            <h5 class="book-title mt-2">@magazine.Magazine.MagazineName @magazine.IssueNumber</h5>
                            <p class="text-muted fs-6">Yayın Tarihi: @magazine.PublicationDate.ToString("MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</p>
                            <a href="@Url.Action("MagazineDetail", "Dergiler", new { id = magazine.Magazine.Id })" class="btn btn-primary btn-sm mt-2">
                                Detayları Gör
                            </a>

                            <div class="d-flex justify-content-center gap-3 mt-2">
                                <a href="#" title="Paylaş">
                                    <i class="fa-solid fa-share-nodes"></i>
                                </a>
                                
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    function Yazdir() {
          window.print();
    }

 
    function KopyalaIsim() {
        var metin = document.getElementById("dergiIsmi").innerText;
        navigator.clipboard.writeText(metin).then(function () {
            alert("Kitap ismi kopyalandı: " + metin);
        }, function (err) {
            alert("Kopyalama başarısız oldu.");
        });
    }
</script>

 