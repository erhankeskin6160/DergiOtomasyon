@model User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dergi Otomasyon Sistemi</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/font-awesome.css" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/style.css" />
</head>

<body>

    <header class="text-bg-primary p-3 text-center mt-2 mx-2 rounded-3">
        <h1>Admin Giriş Yap</h1>
    </header>
    <section class="dergi mt-3 p-4 bg-light rounded-2">

        <form asp-controller="Admin" asp-action="Login" method="post">

            <input type="hidden" asp-for="Id" />
            <label for="login-email" class="fw-bold ms-3 me-0 w-0 d-inline-block">Email</label>
            <input class="d-inline-block my-2 p-1 border-1 rounded-1"
                   style="width: 94.5%;"
                   type="text"
                   id="login-email"
                   asp-for="Email"
                   placeholder="E-mail"
                   required />

            <label for="login-password" class="fw-bold ms-3 me-2 w-0 d-inline-block">Şifre</label>
            <input class="d-inline-block my-2 p-1 border-1 rounded-1"
                   style="width: 95%;"
                   type="password"
                   id="login-password"
                   asp-for="Password"
                   placeholder="Şifre"
                   required />

            <div class="d-grid">
                <button type="submit"
                        class="text-bg-primary rounded-1 border-0 btn btn-primary"
                        style="cursor:pointer"
                        id="login-button">
                    Giriş Yap
                </button>
            </div>
        </form>

    </section>


    <!-- Scriptler -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.9.6/lottie.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../js/script.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


