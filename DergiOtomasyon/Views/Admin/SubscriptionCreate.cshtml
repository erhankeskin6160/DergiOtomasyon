
@{
    ViewData["Title"] = "SubscriptionCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SubscriptionPlan

<h2>Abonelik Planı Ekle</h2>

<form asp-action="SubscriptionCreate" method="post">
    <div>
        <label>Plan Adı</label>
        <input asp-for="PlanName" />
    </div>
    <div>
        <label>Süre (gün olarak)</label>
        <input asp-for="DurationInMonths" type="number" />
    </div>
    <div>
        <label>Fiyat</label>
        <input asp-for="Price" type="number" step="0.01" />
    </div>
    <button type="submit">Ekle</button>
</form>
