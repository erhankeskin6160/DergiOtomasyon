@model List<Magazine>
@{
    ViewData["Title"] = "DergiListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Dergi Listesi</title>
</head>
<body>
    <table class="table table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>Başlık</th>
                <th>Yayın Tarihi</th>
                <th>Durum</th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dergiliste in Model)
            {
                
           
            <tr>
                <td>@dergiliste.MagazineName</td>
                <td>@dergiliste.PublisDate.ToShortDateString()</td>
                <td>@if(dergiliste.ısPuslihed==true)
                    {
                            var durum = ViewBag.yayındurumu = "Yayınlandı";
                            <span class="badge bg-success">@durum </span>

                            }
                            else
                            {
                            <span class="badge bg-danger">Yayınlanmadı</span>
                            }
                    </td>
                <td>
                    <a class="btn btn-warning btn-sm"href="/Admin/DergiDüzenle/@dergiliste.Id">Düzenle</a>
                        <a class="btn btn-danger btn-sm" href="/Admin/DergiSil/@dergiliste.Id">Sil</a>
                </td>
            </tr>
            }
            
        </tbody>
    </table>


</body>

</html>