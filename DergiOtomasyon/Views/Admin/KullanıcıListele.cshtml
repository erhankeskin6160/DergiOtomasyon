
@model List<User>
@{
    ViewData["Title"] = "KullanıcıListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Kullanıcılar</title>
</head>

<body>
    <table class="table table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Bakiye</th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kullanıcı in Model)
            {
                
           
            <tr>
                <td>@kullanıcı.Name</td>
                <td>@kullanıcı.Email</td>
                <td>@kullanıcı.Balance₺</td>
                <td>
                        <a class="btn btn-warning btn-sm" href="/Admin/KullanıcıDüzenle/@kullanıcı.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" href="/Admin/KullanıcıSil">Sil</a>
                </td>
            </tr>
            
            }
        </tbody>
    </table>

</body>

</html>