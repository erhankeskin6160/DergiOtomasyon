@model User
@{
    ViewData["Title"] = "KullanıcıEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Dergi Ekle</title>
</head>

<body>
    <input type="hidden" asp-for="Id" />
    <form class="row g-3 mt-4" method="post" action="KullanıcıEkle" enctype="multipart/form-data">
        <div class="col-md-6">
            <label for="title" class="form-label">İsim</label>
            <input type="text" asp-for="Name" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Last Name</label>
            <input type="text" asp-for="LastName" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Kullanıcı Adı</label>
            <input type="text" asp-for="UserName" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Sifre</label>
            <input type="password" asp-for="Password" required value="password" />
        </div>

        <div class="col-md-6">
            <label class="form-label">E mail</label>
            <input type="email" asp-for="Email" required value="example@gmail.com" />
        </div>
        
        <input type="file" asp-for="UserImg" />

        <div class="col-12">
            <button type="submit" class="btn btn-success">Kaydet</button>
            <a href="/Admin/Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</body>

</html>