@model User
@{
    ViewData["Title"] = "KullanıcıDüzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Document</title>
</head>

<body>
    <div class="container mt-5">
        <h2>Kullanıcı Düzenle</h2>

        <form class="row g-3 mt-3 " asp-controller="Admin" asp-action="KullanıcıDüzenle" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="col-md-6">
                <label  class="form-label">İsim</label>
                <input type="text" class="form-control" asp-for="Name"  required>
            </div>

            <div class="col-md-6">
                <label for="text" class="form-label">Soyisim</label>
                <input type="text" class="form-control" asp-for="LastName"   required>
            </div>

            <div class="col-md-6">
                <label   class="form-label">Kullanıcı Adı</label>
                <input type="text" class="form-control" asp-for="UserName"   required>
            </div>

            <div class="col-md-6">
                <label   class="form-label">Password</label>
                <input type="password" class="form-control" asp-for="Password" required>
            </div>
                <div class="col-md-6">
                <label  class="form-label">E mail</label>
                <input type="email" class="form-control" asp-for="Email"  required>
            </div>

            <div>
                <label class="form-label">Balance</label>
                <input type="number" class="form-control" asp-for="Balance" value="0" required>
            </div>

            <div>
                <input type="file"  asp-for="UserImg" />
            </div>



            <div class="col-12">
                <button type="submit" class="btn btn-primary" value="Gönder">Kaydet</button>
                <a href="/User/Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>

</body>

</html>