@using System.Globalization
@model MagazineViewModel

<div class="container">
    <div class="mt-5">
        <h3 class="mb-3">Yeni Yayınlar</h3>
        <div class="row">
            @foreach (var item in Model.magazineInfo)
            {
                <div class="me-4 mb-2 col-xl-2 col-lg-4 col-md-6 col-sm-6" id="books-card">
                    <div class="book-card">
                        <img class="book-img" src="img/yansımadergisi.jpg" alt="Kitap Kapağı">
                        <div class="book-card-body">
                            <h5 class="book-title text-center mt-2">@item.Magazine.MagazineName</h5>
                            <p class="text-muted fs-6 text-center">@item.Magazine.PublisDate.ToString("MMMM yyyy", new CultureInfo("tr_TR"))</p>
                            <p class="text-break fw-medium ps-1 mt-2">
                                @item.MagazineDescrition
                            </p>
                            <a href="@Url.Action("MagazineDetail", "Dergiler", new { id = item.Id })" class="btn btn-primary btn-sm ms-3 mt-2 me-5">
                                Detayları Gör
                            </a>
                            <a href="@Url.Action("Borrow", "Dergiler", new { MagazineInfoId = item.Id })" class="btn btn-primary btn-sm ms-3 mt-2 me-5">
                                Ödünç Al
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Sayfalama -->
            <div class="mt-1 p-3">
                <nav aria-label="page navigation">
                    <ul class="pagination">
                        <!-- Previous Page Link -->
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a href="?page=@(Model.CurrentPage - 1)" class="page-link">Geri</a>
                        </li>

                        <!-- Page Number Links -->
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a href="?page=@i" class="page-link">@i</a>
                            </li>
                        }

                        <!-- Next Page Link -->
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a href="?page=@(Model.CurrentPage + 1)" class="page-link" aria-label="Next">İleri</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
